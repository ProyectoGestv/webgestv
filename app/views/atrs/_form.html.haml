= form_for @atr do |f|
  - if @atr.errors.any?
    #error_explanation
      %h2= "#{pluralize(@atr.errors.count, "error")} prohibited this atr from being saved:"
      %ul
        - @atr.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :desc
    = f.text_field :desc
  .field
    = f.label :ref_prot
    = f.text_field :ref_prot
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :rdbl
    = f.check_box :rdbl
  .field
    = f.label :wtbl
    = f.check_box :wtbl
  .actions
    = f.submit 'Save'
