%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title GESTV
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %link{:href => "http://cdn.oesmith.co.uk/morris-0.4.3.min.css", :rel => "stylesheet"}
    %script{:src => "http://cdn.oesmith.co.uk/morris-0.4.3.min.js"}
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"}
    %script{:src => "https://raw.github.com/DmitryBaranovskiy/g.raphael/master/min/g.raphael-min.js"}
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"}
    %script{:src => "http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js", :type => "text/javascript"}
    %script{:src => "http://code.highcharts.com/modules/exporting.js"}

    %link{:href => "http://tarruda.github.com/bootstrap-datetimepicker/assets/css/bootstrap-datetimepicker.min.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %script{:src => "http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.min.js", :type => "text/javascript"}



  %body
    #wrap
      .banner
        =image_tag "bannerw.png"
      .navbar
        .navbar-inner
          .container-fluid
            %ul.nav
              %li
                %a{ :href => root_path, :class => "#{'active' if controller.controller_name == 'static'}"}
                  ="Inicio"
              %li.dropdown
                %a.dropdown-toggle{ :href => root_path, "data-toggle" => "dropdown", :class => "#{'active' if controller.controller_name == 'net_eles' or controller.controller_name == 'servs' or controller.controller_name == 'laynet_eles'}"}
                  ="Configuración"
                  %b.caret
                %ul.dropdown-menu
                  %li.dropdown-submenu
                    %a{:href => root_path}
                      ="Recursos Gestionables"
                    %ul.dropdown-menu
                      %li= link_to "Elementos de Capa de Red", laynet_eles_path
                      %li= link_to "Elementos de Red", net_eles_path
                      %li= link_to "Servicios", servs_path
                      %li= link_to "Conexiones", links_path
              %li
                %a{ :href => root_path}
                  ="Desempeño"
              %li
                %a{ :href => alrts_path}
                  ="Alertas"
              %li
                %a{ :href => root_path}
                  ="Usuarios"

              %li
                %a{:href => reports_index_path}
                  ="Reportes"    
      .content
        = yield
      #push
    #footer
      %p.pp="©2013 GESTV | Universidad del Cauca."

