%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title GESTV
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    #wrap
      .banner
        =image_tag "banner.png"
      .navbar
        .navbar-inner
          .container-fluid
            %ul.nav
              %li
                %a{ :href => root_path, :class => "#{'active' if controller.controller_name == 'static'}"}
                  ="Inicio"
              %li.dropdown
                %a.dropdown-toggle{ :href => root_path, "data-toggle" => "dropdown", :class => "#{'active' if controller.controller_name == 'net_eles' or controller.controller_name == 'servs'}"}
                  ="Configuración"
                  %b.caret
                %ul.dropdown-menu
                  %li.dropdown-submenu
                    %a{:href => root_path}
                      ="Recursos Gestionables"
                    %ul.dropdown-menu
                      %li= link_to "Elementos de Red", net_eles_path
                      %li= link_to "Servicios", servs_path
                      %li= link_to "Conexiones", root_path
                    %li= link_to "Configuración de Alarmas", root_path
              %li
                %a{ :href => root_path}
                  ="Desempeño"
              %li
                %a{ :href => root_path}
                  ="Alarmas"
              %li
                %a{ :href => root_path}
                  ="Usuarios"
      .content
        = yield
      #push
    #footer
      %p.pp="©2013 GESTV | Universidad del Cauca."

