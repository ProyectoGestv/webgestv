%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title GESTV
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    #wrap
      .banner
        =image_tag "banner.png"
      .navbar
        .navbar-inner
          .container-fluid
            = link_to "Inicio", root_path, :class => 'brand'
            %ul.nav
              %li.dropdown
                %a.dropdown-toggle{ :href => '', "data-toggle" => "dropdown"}
                  ="Configuración"
                  %b.caret
                %ul.dropdown-menu
                  %li.dropdown-submenu
                    %a{:href => ''}
                      ="Recursos Gestionables"
                    %ul.dropdown-menu
                      %li= link_to "Elementos de Red", net_eles_path
                      %li= link_to "Servicios", servs_path
                      %li= link_to "Conexiones"
                  %li= link_to "Configuración de Alarmas"
              %li.dropdown
                %a.dropdown-toggle{ :href => '', "data-toggle" => "dropdown"}
                  ="Desempeño"
              %li.dropdown
                %a.dropdown-toggle{ :href => '', "data-toggle" => "dropdown"}
                  ="Alarmas"
              %li.dropdown
                %a.dropdown-toggle{ :href => '', "data-toggle" => "dropdown"}
                  ="Usuarios"
      .content
        = yield
      #push
    #footer
      %p.pp="©2013 GESTV | Universidad del Cauca."

