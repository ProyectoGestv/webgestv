%h1= t('.title')
%br
- if notice
  .alert.alert-success
    %a.close{"data-dismiss" => "alert"} ×
    = notice

%table.table.table-striped
  %thead
    %th Nombre
    %th Descripción
    %th Ver
    %th Editar
    %th Eliminar
    %th Parámetros
  %tbody
    - @net_eles.each do |net_ele|
      %tr
        - if net_ele.mcr_atrs?
          %td= link_to image_tag('arch_del.png', {:title => t('forms.delparam')}), net_ele
        - else
          %td= link_to image_tag('arch_add.png', {:title => t('forms.addparam')}), net_ele
        %td= net_ele.name
        %td= net_ele.desc
        %td= link_to image_tag('ver.png', {:title => t('forms.show')}), net_ele
        %td= link_to image_tag('editar.png', {:title => t('forms.edit')}), edit_net_ele_path(net_ele)
        %td= link_to image_tag('eliminar.png', {:title => t('forms.destroy')}), net_ele, :method => :delete, :data => { :confirm => t('.confirm') }

%br
.form-actions
  = link_to t('.new'), new_net_ele_path, {:class => "links"}