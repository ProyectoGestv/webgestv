= form_for @serv do |f|
  - if @serv.errors.any?
    #error_explanation
      %h2= "#{pluralize(@serv.errors.count, "error")} prohibited this serv from being saved:"
      %ul
        - @serv.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :desc
    = f.text_field :desc

  .actions
    = f.submit 'Guardar'
