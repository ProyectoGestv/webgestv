%h1= "Listado de atributos para #{@mr_name}"
-i=0
%fieldset#mainform
  %legend.the-legend
    ="Grupos de Atributos"
    - @mcr_atrs.each do |mcr_atr|
      -i=i+1
      #accordion1.accordion
        .accordion-group
          .accordion-heading
            %a.accordion-toggle{"data-parent" => "#accordion1", "data-toggle" => "collapse", :href => "#collapse#{i}"}
              ="Grupo de atributos ##{i}: #{mcr_atr.name} (#{mcr_atr.tipo})"
            %table
              %tr
                -if mcr_atr.tipo == 'compuesto'
                  -if mcr_atr.alr_mntr
                    %td=link_to image_tag('alr_delete.png', {:title => t('forms.delalarm')}),'#'
                  -else
                    %td=link_to image_tag('alr_add.png', {:title => t('forms.addalarm')}), '#'
          %div{:id => "collapse#{i}", :class => "accordion-body collapse in"}
            .accordion-inner
              %table
                %tr
                  %th Nombre
                  %th DescripciÃ³n
                  %th Referencia protocolar
                  %th Tipo
                  -if mcr_atr.tipo == 'simple'
                    %th Monitor QoS
                    %th Monitor Alarma
                  - mcr_atr.atrs.each do |atr|
                    %tr
                    %td= atr.name
                    %td= atr.desc
                    %td= atr.ref_prot
                    %td= atr.tipo
                    -if mcr_atr.tipo == 'simple'
                      %td
                        -if atr.qos_mon
                          = link_to image_tag('alr_delete.png', {:title => t('forms.delalarm')}), "mcr_atrs/#{mcr_atr._id}/atrs/#{atr._id}/alr_mntr_cntrs/#{atr.qos_mon._id}?alr_cat=qos", :method => :delete, :data => { :confirm => t('forms.delparams.confirm') }
                        -else
                          = link_to image_tag('alr_add.png', {:title => t('forms.addalarm')}), "mcr_atrs/#{mcr_atr._id}/atrs/#{atr._id}/alr_mntr_cntrs/new?alr_cat=qos"
                      %td
                        -if atr.alr_mon
                          = link_to image_tag('alr_delete.png', {:title => t('forms.delalarm')}), "mcr_atrs/#{mcr_atr._id}/atrs/#{atr._id}/alr_mntr_cntrs/#{atr.alr_mon._id}?alr_cat=alr", :method => :delete, :data => { :confirm => t('forms.delparams.confirm') }
                        -else
                          = link_to image_tag('alr_add.png', {:title => t('forms.addalarm')}), "mcr_atrs/#{mcr_atr._id}/atrs/#{atr._id}/alr_mntr_cntrs/new?alr_cat=alr"

%br
.form-actions
  =link_to t('forms.back'), session[:return_to], {:class => "links"}


