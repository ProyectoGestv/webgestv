= form_for @alrt do |f|
  - if @alrt.errors.any?
    #error_explanation
      %h2= "#{pluralize(@alrt.errors.count, "error")} prohibited this alrt from being saved:"
      %ul
        - @alrt.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :msg
    = f.text_field :msg
  .actions
    = f.submit 'Save'
