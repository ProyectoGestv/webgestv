%h1= t('.title')
%br
- if notice
  .alert.alert-success
    %a.close{"data-dismiss" => "alert"} ×
    = notice

%table.table.table-striped
  %thead
    %th Nombre
    %th Descripción
    %th Ver
    %th Editar
    %th Eliminar
    %th Parámetros
  %tbody
    - @laynet_eles.each do |laynet_ele|
      %tr
        - if laynet_ele.mcr_atrs?
          %td= link_to image_tag('arch_del.png', {:title => t('forms.delparam')}), laynet_ele
        - else
          %td= link_to image_tag('arch_add.png', {:title => t('forms.addparam')}), laynet_ele
        %td= laynet_ele.name
        %td= laynet_ele.desc
        %td= link_to image_tag('ver.png', {:title => t('forms.show')}), laynet_ele
        %td= link_to image_tag('editar.png', {:title => t('forms.edit')}), edit_laynet_ele_path(laynet_ele)
        %td= link_to image_tag('eliminar.png', {:title => t('forms.destroy')}), laynet_ele, :method => :delete, :data => { :confirm => t('.confirm') }

%br
.form-actions
  = link_to t('.new'), new_laynet_ele_path, {:class => "links"}