
<div style="background-color: #F2F2F2">


<h2 class="the-legend"> Formulario Filtrado</h2>


<%= simple_form_for @report , :id => 'formu', :remote => true , :html => {:id =>'formu'} , :url => {action:'actualizar'}  do |f| %>

  <% if @report.errors.any? %>
  <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% $report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>

  </div>
  <% end %>


  <div class="field">
  <%=f.input :parasim, label: 'Parámetros Simples', :collection => @mcrsearch.map{ |c| [c.name,c.id] }, include_blank: 'Seleccione un parámetro', :input_html => {:onchange => "reload_mcr(this.value)"} %>
  </div>


  <div id="atrr"></div>


  <div class="field">
      <%= f.input :option, label: 'Rangos', :collection => [['Rango fechas ', 1], ['Rango tiempo ', 2], ['Todos', 3]] , include_blank: 'Seleccione un tipo de rango', :input_html => {:onchange => "visible(this.value)"} %>
  </div>

  <div id="rangot" style='display: none'>
     <%= f.label 'Rango de tiempo' %>
     <%= f.select :time , [['Ultimo anio ', 1], ['Ultimo mes', 2] , ['Ultima semana', 3] , ['Ultimo dia', 4], ['Ultima hora', 5] , ['Ultimo minuto', 6]]%>
  </div>

  <div id="rangof" style='display: none'>

      <%=f.label 'Fechas'%>

        <div id="datetimepicker" class="input-append date">
        <%=f.label 'Desde'%>
        <%=f.text_field :fechaa%>
        <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon= "icon-calendar"> </i>
        </span>
        </div>


        <div id="datetimepickerb" class="input-append date">
        <%=f.label 'hasta'%>
        <%=f.text_field :fechab %>
        <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon= "icon-calendar"> </i>
        </span>
        </div>

      <script>
          $('#datetimepicker').datetimepicker({
              format: 'dd/MM/yyyy hh:mm:ss'
          });

          $('#datetimepickerb').datetimepicker({
              format: 'dd/MM/yyyy hh:mm:ss'
          });
      </script>
   </div>


  <div class="actions">
  <button id="enviar" type="submit" onclick="sendd()">Realizar consulta</button>
  </div>

<% end %>

</div>


