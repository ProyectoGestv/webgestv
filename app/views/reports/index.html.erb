<script>
    function render_partialh() {
        $('#partial').html('<%= escape_javascript(render :partial => "hst") %>') ;
    }

    function render_partials() {
        $('#partial').html('<%= escape_javascript(render :partial => "statistic") %>') ;
    }


    function render_partialg() {
        $('#partial').html('<%= escape_javascript(render :partial => "graph") %>');
    }

    function render_partialj() {
        $('#partial').html('<%= escape_javascript(render :partial => "realtime") %>');
    }


</script>

<div style="clear:both ; margin: 10px">

  <h2 class="the-legend">An√°lisis de datos</h2>

<button type="submit" onclick="render_partialh()" class="btn-primary"> Historicos</button>
