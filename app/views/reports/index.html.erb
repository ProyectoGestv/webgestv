<body>

<div class="partial" style="float: left">
<%= render 'form' %>
</div>

<div id="info" style="float: left ; margin-left: 30px">
<table class="table table-bordered" style="width: 400px">
<tittle><h2 class="the-legend">Parametros</h2></tittle>
    <tr class="success">
     <td>Opcion seleccionada</td>
     <td><%= @opcion %> </td>
    </tr>
  <tr class="success">
    <td>Rango Tiempo</td>
    <td><%= @tiempo %> </td>
  </tr>
</table>
<table class="table table-bordered" style="width: 400px">
