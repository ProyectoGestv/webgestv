<button type="button" onclick="render_partialg()" class="btn-primary">Grafico</button>
<button type="button" onclick="render_partialj()" class="btn-primary">Grafico tiempo real</button>

 <div id="partial" style="min-width: 400px" align="center">
 <%= render 'hst' %>
 </div>
